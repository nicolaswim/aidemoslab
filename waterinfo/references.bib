	author = {König, P.D. and Wurster, S. and Siewert, M.B.},
	year = {2023},
	note = {Publisher: Elsevier Ltd},
	keywords = {Artificial intelligence, Attitudes, Citizens, Conceptual, Germany, Regulation, Survey, Sustainability, none},
}

