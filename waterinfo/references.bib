@article{de_winter_chatgpt_nodate,
	title = {{ChatGPT} and {Academic} {Work}: {New} {Psychological} {Phenomena}},
	abstract = {ChatGPT is widely used globally, especially in tech-savvy environments where text generation, processing, and interpretation are key, such as in Technical Universities. A previous keyword analysis showed that ChatGPT use is detectable in texts of students and academics. This essay describes the impact of ChatGPT on the psychology of work from an introspective and phenomenological perspective, from the perspective of the educator. We describe six phenomena: (1) the cognitive workload associated with conducting a metaphorical Turing test to determine if ChatGPT has been used; (2) an ethical void and alienation resulting from secretive ChatGPT use; (3) insights into the motives of the sender, when the sender does not disclose having used ChatGPT, and the recipient does not reveal their awareness of the sender’s use of ChatGPT; (4) a sense of meaninglessness as texts and statements lose their fixed meanings, and no longer reveal the sender’s struggles and understanding; (5) a redefinition of utility, where certain texts may show redundancy with patterns already enclosed in the base model, while physical measurements and personal observations are seen as more unique and novel; (6) a power dynamic between sender and recipient, inadvertently leaving non-users as the disadvantaged third party. The essay makes clear that the introduction of AI tools into society has far-reaching effects, initially visible in text-related fields, such as academia, with potential to spread more broadly.},
	language = {en},
	author = {de Winter, Joost and Eisma, Yke Bauke},
	keywords = {BBBBBB, aloha},
}

@inproceedings{lammert_sustainability_2023,
	title = {Sustainability for {Artificial} {Intelligence} {Products} and {Services} – {Initial} {How}-to for {IT} {Practitioners}},
	url = {http://hdl.handle.net/10125/103428},
	doi = {10.24251/HICSS.2023.794},
	abstract = {Year after year, software engineers celebrate new achievements in the field of AI. At the same time, the question about the impacts of AI on society remains insufficiently answered in terms of a comprehensive technology assessment. This article aims to provide software practitioners with a theoretically grounded and practically tested approach that enables an initial understanding of the potential multidimensional impacts. Subsequently, the results form the basis for discussions on AI software requirements. The approach is based on the Sustainability Awareness Framework (SusAF) and Participatory Design. We conducted three workshops on different AI topics: 1. Autonomous Driving, 2. Music Composition, and 3. Memory Avatars. Based on the results of the workshops we conclude that a two-level approach should be adopted: First, a broad one that includes a diverse selection of stakeholders and overall impact analysis. Then, in a second step, specific approaches narrowing down the stakeholders and focusing on one or few impact areas.},
	language = {en},
	urldate = {2024-03-26},
	author = {Lammert, Dominic and Abdullai, Larry and Betz, Stefanie and Porras, Jari},
	year = {2023},
}
